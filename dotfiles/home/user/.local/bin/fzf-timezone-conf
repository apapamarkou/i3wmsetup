#!/usr/bin/env bash

set_# Î›Î¯ÏƒÏ„Î± ÏŒÎ»Ï‰Î½ Ï„Ï‰Î½ Î´Î¹Î±Î¸Î­ÏƒÎ¹Î¼Ï‰Î½ timezones
zone=$(timedatectl list-timezones | fzf --prompt="ğŸ•’ Select Timezone > " --height=40% --layout=reverse)

# Î‘Î½ Î¿ Ï‡ÏÎ®ÏƒÏ„Î·Ï‚ Ï€Î¬Ï„Î·ÏƒÎµ ESC Î® Î´ÎµÎ½ Î´Î¹Î¬Î»ÎµÎ¾Îµ Ï„Î¯Ï€Î¿Ï„Î±
[[ -z "$zone" ]] && echo "No timezone selected." && return 1

# Î•Ï†Î±ÏÎ¼Î¿Î³Î® Ï„Î·Ï‚ Î½Î­Î±Ï‚ timezone
if sudo timedatectl set-timezone "$zone"; then
	notify-send "ğŸ•’ Timezone changed to $zone"
 	echo "âœ… Timezone changed to $zone"
else
	notify-send "âŒ Failed to change timezone"
	echo "âŒ Failed to change timezone"
fi

