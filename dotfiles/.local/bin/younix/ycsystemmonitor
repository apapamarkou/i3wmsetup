# Lisence GPL3
# Homepage: https://github.com/apapamarkou/younix
# Author: Andrianos Papamarkou
# Email: papamarkoua@gmail.com

#
# YoUNiX Configure System Monitor
#

MUTE_NOTIFY=false
MUTE_ECHO=false

showHelp() {
    echo "YoUNiX Configure System Monitor"
    echo "Usage: ycsystemmonitor [OPTIONS]"
    echo "Options:"
    echo "  -t              Open in terminal"
    echo "  -s MONITOR      Set system monitor (top/htop/btop)"
    echo "  -h              Show this help"
    echo "  -n              Show notification"
    echo "  -v              Show console message"
    echo "Arguments can be combined: -vn, -nv, etc."
}

openTerminal() {
    local args=""
    [ "$MUTE_NOTIFY" = true ] && args="$args -n"
    [ "$MUTE_ECHO" = true ] && args="$args -v"
    nohup flock -n ~/.config/lock terminal --columns=50 --lines=15 --title="YoUNiX Control Center" ycsystemmonitor $args > /dev/null 2>&1 &
}

printMessage() {
    if [ "$MUTE_NOTIFY" = false ]; then
        notify-send "System monitor changed to $1" "The change will be available at the next login."
    fi
    if [ "$MUTE_ECHO" = false ]; then
        echo -e "System monitor changed to $1.\nThe change will be available at the next login."
    fi
}

change() {
    local file="$HOME/.profile"
    sed -i "s|^export SYSTEM_MONITOR=.*|export SYSTEM_MONITOR=\"$1\"|" "$file" 2>/dev/null || echo "export SYSTEM_MONITOR=\"$1\"" >> "$file"
    printMessage "✅ System monitor changed to $1." "The change will be available at the next login."
}

displayMenu() {
    while true; do
        clear
        yprint -c --color=yellow "YoUNiX Configure System Monitor"

        # relative fzf height by terminal height
        height=$(($(tput lines) - 2))

        # print current
        yprint -c --color=green "Current system monitor: $SYSTEM_MONITOR"
        
        choice=$(echo -e "󰍹  top\n󰷜  htop\n󰨇  btop\n  Back" | fzf --layout=reverse --prompt="  > " --height=$height)
        case "$choice" in
            *top*) change top ;;
            *htop*) change htop ;;
            *btop*) change btop ;;
            *) exit 0 ;;
        esac
    done
}

OPEN_TERMINAL=false
SET_MONITOR=""

while getopts "thnvs:" opt; do
    case $opt in
        t) OPEN_TERMINAL=true ;;
        h) showHelp; exit 0 ;;
        n) MUTE_NOTIFY=true ;;
        v) MUTE_ECHO=true ;;
        s) SET_MONITOR="$OPTARG" ;;
        \?) echo "Invalid option. Use -h for help."; exit 1 ;;
    esac
done

if [ -n "$SET_MONITOR" ]; then
    case "$SET_MONITOR" in
        top|htop|btop) change "$SET_MONITOR" ;;
        *) echo "Invalid monitor. Use 'top', 'htop', or 'btop'."; exit 1 ;;
    esac
    exit 0
fi

if [ "$OPEN_TERMINAL" = true ]; then
    openTerminal
    exit 0
fi

displayMenu
