#!/usr/bin/env bash

set_# Λίστα όλων των διαθέσιμων timezones
zone=$(timedatectl list-timezones | fzf --prompt="🕒 Select Timezone > " --height=40% --layout=reverse)

# Αν ο χρήστης πάτησε ESC ή δεν διάλεξε τίποτα
[[ -z "$zone" ]] && echo "No timezone selected." && return 1

# Εφαρμογή της νέας timezone
if sudo timedatectl set-timezone "$zone"; then
	notify-send "🕒 Timezone changed to $zone"
 	echo "✅ Timezone changed to $zone"
else
	notify-send "❌ Failed to change timezone"
	echo "❌ Failed to change timezone"
fi

