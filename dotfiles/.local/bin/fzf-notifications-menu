# Email: papamarkoua@gmail.com


dunst_file="$HOME/.config/dunst/dunstrc"

choice=$(echo -e "󰁜  top-right\n󰁛  top-left\n󰁃  bottom-right\n󰁂  bottom-left" | fzf --layout=reverse --prompt="  Select Position: ")


# change "origin = top-right" to .config/dunst/dunstrc
change() {
    # call propety-change to change origin = top-left
    property-change "origin" "$dunst_file" " $1"
    # restart dunst to apply changes
    pkill dunst
    nohup dunst > /dev/null 2>&1 &
    notify-send "Notifications Menu" "Position changed to $choice"
}

case "$choice" in
    *top-right*) change top-right ;;
    *top-left*) change top-left ;;
    *bottom-right*) change bottom-right ;;
    *bottom-left*) change bottom-left ;;
esac




