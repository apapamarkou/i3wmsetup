#!/usr/bin/env bash
# Fancy Nerd-Font system fetch with color and icons

# Colors
CYAN="\033[0;36m"
MAGENTA="\033[0;35m"
YELLOW="\033[1;33m"
GREEN="\033[0;32m"
BLUE="\033[0;34m"
RESET="\033[0m"

clear
printf "${CYAN}"
figlet "Unix Shell"
echo -e "${GREEN}╭────────────────────────────────────────────────╮"

# 👤 User / Host
printf "${GREEN}│${YELLOW}    User: ${RESET}%s\n" "$(whoami)"
printf "${GREEN}│${YELLOW}    Host: ${RESET}%s\n" "$(hostname)"

# 🧠 Memory
if command -v free >/dev/null 2>&1; then
    read -r _ total used _ < <(free -h | awk '/^Mem:/ {print $1, $2, $3, $4}')
    printf "${GREEN}│${YELLOW}    RAM: ${RESET}%s / %s\n" "$used" "$total"
fi

# ⚙️ CPU
if command -v lscpu >/dev/null 2>&1; then
    cpu=$(lscpu | grep 'Model name' | sed 's/Model name:\s*//')
    printf "${GREEN}│${YELLOW}    CPU: ${RESET}%s\n" "$cpu"
fi

# 🖥 GPU
if command -v lspci >/dev/null 2>&1; then
    gpu=$(lspci | grep -E "VGA|3D" | head -n1 | sed 's/.*: //')
    printf "${GREEN}│${YELLOW}    GPU: ${RESET}%s\n" "$gpu"
fi

# 💽 Disk
if command -v df >/dev/null 2>&1; then
    disk=$(df -h / | awk 'NR==2 {print $3 " / " $2 " (" $5 ")"}')
    printf "${GREEN}│${YELLOW}    Disk: ${RESET}%s\n" "$disk"
fi

# 🕒 Uptime
printf "${GREEN}│${YELLOW}    Uptime: ${RESET}%s\n" "$(uptime -p | sed 's/up //')"

#  OS
if [[ -f /etc/os-release ]]; then
    . /etc/os-release
    printf "${GREEN}│${YELLOW}    OS: ${RESET}%s %s\n" "$NAME" "$VERSION_ID"
fi

# 🐚 Shell
printf "${GREEN}│${YELLOW}    Shell: ${RESET}%s\n" "$SHELL"

printf "${GREEN}╰────────────────────────────────────────────────╯"
echo -e "${RESET}"
echo
