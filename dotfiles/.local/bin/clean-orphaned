# Clean Orphaned Packages for YOUNIX desktop environment

figlet "$DISTRO_NAME"

echo -e "\e[33mYou are about to clean unused packages\e[0m"
echo

sudo pacman -Rns $(pacman -Qtdq) 2>/dev/null || echo 'No orphaned packages found'; 

read -p "Press Enter to continue..."
