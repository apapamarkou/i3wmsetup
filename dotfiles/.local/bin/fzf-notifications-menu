# Email: papamarkoua@gmail.com

choice=$(echo -e " top-right\n top-left\n bottom-right\n bottom-left" | fzf --layout=reverse --prompt="  Select Position: ")

case "$ACTION" in
    *top-right*) change top-right ;;
    *top-left*) change top-left ;;
    *bottom-right*) change bottom-right ;;
    *bottom-left*) change bottom-left ;;
    *) return ;;  # Back ή κενή επιλογή
esac

change() {
    if [ -n "$1" ]; then
        property-change "origin" "$HOME/.config/dunst/dunstrc" "$1"
        pkill dunst && dunst &
    fi
}
