# Default system monitor is confirued in .profile
SCRIPT_NAME=$(basename "$0")
flock -n $LOCK_DIR/$SCRIPT_NAME.lock terminal --columns=80 --lines=24 --title="$FLOATING_PREFIX Network Configuration" $NETWORK_CONFIG
