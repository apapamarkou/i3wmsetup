#
# YoUNiX Control Center main menu
#

show_help() {
    echo "YoUNiX Control Center"
    echo "Usage: ycc [OPTIONS]"
    echo "Options:"
    echo "  -t    Open in terminal"
    echo "  -h    Show this help"
}

open_terminal() {
    flock -n ~/.config/lock terminal --columns=55 --lines=17 --title="YoUNiX Control Center" ycc
}

display_menu() {
    while true; do
        clear
        yprint -c --color=yellow "YoUNiX Control Center"

        # relative fzf height by terminal height
        height=$(($(tput lines) - 1))

        choice=$(echo -e "󰍹  Display\n  Look & Theme\n  System Monitor\n󰀂  Network\n  Bluetooth\n  Terminal Preferences\n󰗅  Sound\n  Localization\n  System Maintenance\n󰔄󰤄  Power Profiles\n󰐥  Power Menu\n  Exit" | fzf --layout=reverse --prompt="  > " --height=$height)
        [ -z "$choice" ] && exit 0
        
        case "$choice" in
            *Display*) ycdisplay ;;
            *Look*) fzf-look-menu ;;
            *Monitor*) ycsystemmonitor ;;
            *Network*) netconf ;;
            *Bluetooth*) bluetoothwindow ;;
            *Terminal*) ycterminal ;;
            *Sound*) ycsound ;;
            *Localization*) yclocalization ;;
            *Maintenance*) ycsystem ;;
            *Profiles*) powerprofileswindow ;;
            *Power*) power_menu ;;
            *) exit 0 ;;
        esac
    done
}

OPEN_TERMINAL=false

while getopts "th" opt; do
    case $opt in
        t) OPEN_TERMINAL=true ;;
        h) show_help; exit 0 ;;
        \?) echo "Invalid option. Use -h for help."; exit 1 ;;
    esac
done

if [ "$OPEN_TERMINAL" = true ]; then
    open_terminal
    exit 0
fi

display_menu