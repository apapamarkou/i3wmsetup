#!/bin/bash

# __   __    _   _ _   _ ___  __
# \ \ / /__ | | | | \ | (_) \/ /
#  \ V / _ \| | | |  \| | |\  / 
#   | | (_) | |_| | |\  | |/  \ 
#   |_|\___/ \___/|_| \_|_/_/\_\
#
# Lisence GPL3
# Homepage: https://github.com/apapamarkou/younix
# Author: Andrianos Papamarkou
# Email: papamarkoua@gmail.com

#
# YoUNiX Select BufferSize
#

MUTE_NOTIFY=false
MUTE_ECHO=false
SCRIPT_NAME=$(basename "$0")
TITLE="Select BufferSize"
CONFIG_FILE="$HOME/.config/pipewire/pipewire.conf"

# Read the current default.clock.quantum from the user's config file
# FIX: Added grep -v 'quantum-' to explicitly exclude 'quantum-limit' and 'quantum-floor' lines.
current_quantum=$(grep 'default.clock.quantum' "$CONFIG_FILE" | grep -v 'quantum-' | head -n 1 | awk '{print $3}' | tr -d '[:space:]')

# Fallback: if no rate is set in the config, use the standard default 1024
[[ -z "$current_quantum" ]] && current_quantum="1024"

showHelp() {
    echo "$DISTRO_NAME $TITLE"
    echo "Usage: $SCRIPT_NAME [OPTIONS]"
    echo "Options:"
    echo "  -t              Open in terminal"
    echo "  -s BUFFERSIZE   Set BufferSize"
    echo "  -h              Show this help"
    echo "  -n              Show notification"
    echo "  -v              Show console message"
    exit 0
}

openTerminal() {
    local args=""
    [ "$MUTE_NOTIFY" = true ] && args="$args -n"
    [ "$MUTE_ECHO" = true ] && args="$args -v"
    nohup flock -n $LOCK_DIR/$SCRIPT_NAME.lock terminal --columns=50 --lines=15 --title="$FLOATING_PREFIX $TITLE" $SCRIPT_NAME $args > /dev/null 2>&1 &
}

change() {
    QUANTUM=$1
    QUANTUM_LINE="    default.clock.quantum = $QUANTUM"
    # Check if the specific target line (default.clock.quantum, not limit/floor) exists
    if grep 'default.clock.quantum' "$CONFIG_FILE" | grep -qv 'quantum-'; then
        # Target line exists: Use conditional sed to replace only the lines that do NOT contain 'quantum-'.
        sed -i "/default\.clock\.quantum/ { /quantum\-/! s|.*|$QUANTUM_LINE| }" "$CONFIG_FILE"
    elif grep -q 'context.properties' "$CONFIG_FILE"; then
        # context.properties exists: insert the new line after it
        sed -i "/context.properties/ a\\$QUANTUM_LINE" "$CONFIG_FILE"
    else
        # context.properties block does not exist: create it with the quantum
        echo -e "context.properties = {\n$QUANTUM_LINE\n}" >> "$CONFIG_FILE"
    fi

    # 7. restart pipewire to make changes
    systemctl --user stop pipewire pipewire-pulse
    systemctl --user start pipewire pipewire-pulse
    clear
}

printMessage() {
    if [ "$MUTE_NOTIFY" = false ]; then
        notify-send "BufferSize changed" "New BufferSize $1."
    fi
    if [ "$MUTE_ECHO" = false ]; then
        echo -e "BufferSize changed\nNew BufferSize $1."
    fi
}

displayMenu() {
    while true; do
        clear
        yprint -c --color=yellow "$DISTRO_NAME $TITLE"
        current_quantum=$(grep 'default.clock.quantum' "$CONFIG_FILE" | grep -v 'quantum-' | head -n 1 | awk '{print $3}' | tr -d '[:space:]')
        yprint -c --color=green "Current BufferSize: $current_quantum "
        # relative fzf height by terminal height
        height=$(($(tput lines) - 2))
        choice=$(echo -e "32\n64\n128\n256\n512\n1024\n2048" | fzf --layout=reverse --height=$height --prompt="ï€‚  > ")
        [ -z "$choice" ] && exit 0
        change "$choice"
        printMessage "$choice"
    done
}

OPEN_TERMINAL=false
SET_TERMINAL=""

while getopts "thnvs:" opt; do
    case $opt in
        t) OPEN_TERMINAL=true ;;
        h) showHelp ;;
        n) MUTE_NOTIFY=true ;;
        v) MUTE_ECHO=true ;;
        s) SET="$OPTARG" ;;
        \?) echo "Invalid option. Use -h for help."; exit 1 ;;
    esac
done

if [ -n "$SET" ]; then
    case "$SET" in
        32|64|128|256|512|1024|2048) 
            change "$SET" && printMessage "$SET" ;;
        *) 
            echo "Invalid samplerate. Use one of: 32, 64, 128, 256, 512, 1024, 2048"
            exit 1 ;;
    esac
    exit 0
fi

if [ "$OPEN_TERMINAL" = true ]; then
    openTerminal
    exit 0
fi

displayMenu