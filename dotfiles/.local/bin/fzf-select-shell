#!/bin/bash

clear

# print "The current is $SHELL" in color yellow
echo -e "\033[33mThe current shell is $SHELL\033[0m"

choice=$(echo -e "  bash\n  zsh\n  fish\n󰌍  Back" | fzf --layout=reverse --height=50% --prompt="  Shell: ")

case $choice in
    *bash*) change-shell /bin/bash ;;
    *zsh*) change-shell /usr/bin/zsh ;;
    *fish*) change-shell /usr/bin/fish ;;
esac

change_shell() {
    chsh -s $1
    notify-send "Shell changed to $1" "This setting will be available at the next login."
}