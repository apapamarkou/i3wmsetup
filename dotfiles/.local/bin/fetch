# Greeting message for YOUNIX terminals

# Colors
CYAN="\033[0;36m"
MAGENTA="\033[0;35m"
YELLOW="\033[1;33m"
GREEN="\033[0;32m"
BLUE="\033[0;34m"
RESET="\033[0m"

clear
printf "${CYAN}"
figlet "Unix Shell"
echo -e "${GREEN}â•­â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â•®"

# ğŸ‘¤ User / Host
printf "${GREEN}â”‚${YELLOW}  ïŠ½  User: ${RESET}%s\n" "$(whoami)"
printf "${GREEN}â”‚${YELLOW}  ï“˜  Host: ${RESET}%s\n" "$(hostname)"

# ğŸ§  Memory
if command -v free >/dev/null 2>&1; then
    read -r _ total used _ < <(free -h | awk '/^Mem:/ {print $1, $2, $3, $4}')
    printf "${GREEN}â”‚${YELLOW}  î‰¦  RAM: ${RESET}%s / %s\n" "$used" "$total"
fi

# âš™ï¸ CPU
if command -v lscpu >/dev/null 2>&1; then
    cpu=$(lscpu | grep 'Model name' | sed 's/Model name:\s*//')
    printf "${GREEN}â”‚${YELLOW}  ï‹›  CPU: ${RESET}%s\n" "$cpu"
fi

# ğŸ–¥ GPU
if command -v lspci >/dev/null 2>&1; then
    gpu=$(lspci | grep -E "VGA|3D" | head -n1 | sed 's/.*: //')
    printf "${GREEN}â”‚${YELLOW}  ï’¼  GPU: ${RESET}%s\n" "$gpu"
fi

# ğŸ’½ Disk
if command -v df >/dev/null 2>&1; then
    disk=$(df -h / | awk 'NR==2 {print $3 " / " $2 " (" $5 ")"}')
    printf "${GREEN}â”‚${YELLOW}  ï‚   Disk: ${RESET}%s\n" "$disk"
fi

# ğŸ•’ Uptime
printf "${GREEN}â”‚${YELLOW}  ï‰’  Uptime: ${RESET}%s\n" "$(uptime -p | sed 's/up //')"

# ïŒƒ OS
if [[ -f /etc/os-release ]]; then
    . /etc/os-release
    printf "${GREEN}â”‚${YELLOW}  î£Œ  OS: ${RESET}%s %s\n" "$NAME" "$VERSION_ID"
fi

# ğŸš Shell
printf "${GREEN}â”‚${YELLOW}  ï’‰  Shell: ${RESET}%s\n" "$SHELL"

printf "${GREEN}â•°â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â•¯"
echo -e "${RESET}"
echo
