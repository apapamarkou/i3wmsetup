#!/bin/bash

# __   __    _   _ _   _ ___  __
# \ \ / /__ | | | | \ | (_) \/ /
#  \ V / _ \| | | |  \| | |\  / 
#   | | (_) | |_| | |\  | |/  \ 
#   |_|\___/ \___/|_| \_|_/_/\_\
#
# Lisence GPL3
# Homepage: https://github.com/apapamarkou/younix
# Author: Andrianos Papamarkou
# Email: papamarkoua@gmail.com

#
# YoUNiX Configure Sound Input
#

MUTE_NOTIFY=false
MUTE_ECHO=false
SCRIPT_NAME=$(basename "$0")
TITLE="Configure Sound Input"

showHelp() {
    echo "$DISTRO_NAME $TITLE"
    echo "Usage: $SCRIPT_NAME [OPTIONS]"
    echo "Options:"
    echo "  -t           Open in terminal"
    echo "  -h           Show this help"
    echo "  -n           Show notification"
    echo "  -v           Show console message"
    echo "Arguments can be combined: -vn, -nv, etc."
}

openTerminal() {
    local args=""
    [ "$MUTE_NOTIFY" = true ] && args="$args -n"
    [ "$MUTE_ECHO" = true ] && args="$args -v"
    nohup flock -n $LOCK_DIR/$SCRIPT_NAME.lock terminal --columns=50 --lines=15 --title="$FLOATING_PREFIX $TITLE" $SCRIPT_NAME $args > /dev/null 2>&1 &
}

printMessage() {
    if [ "$MUTE_NOTIFY" = false ]; then
        notify-send "Sound Input Changed" "Input: $1"
    fi
    if [ "$MUTE_ECHO" = false ]; then
        echo -e "Sound Input Changed\nInput: $1"
    fi
}

displayMenu() {
    while true; do
        sources=$(pactl list short sources | awk '{print $2 " | " $1}')
        clear
        yprint -c --color=yellow "$DISTRO_NAME $TITLE"

        # relative fzf height by terminal height
        height=$(($(tput lines) - 2))
        current=$(pactl info | grep "Default Source" | awk -F': ' '{print $2}')
        yprint -c --color=green "$current"
        
        selection=$(printf "$sources\n$EXIT_TEXT" | fzf --prompt="  > " --height=$height --layout=reverse)
        # Exit if nothing selected
        [[ -z "$selection" ]] && exit 0
        [[ "$selection" = "$EXIT_TEXT" ]] && exit 0
        # Extract source name
        source_name=$(echo "$selection" | awk -F'|' '{print $2}' | xargs)
        # Set default source
        pactl set-default-source "$source_name"
        printMessage "$selection"
    done
}

OPEN_TERMINAL=false
SET_STATE=""
EXIT_TEXT="󰈆  Exit"

while getopts "ethnv:" opt; do
    case $opt in
        e) EXIT_TEXT="󰌍  Back" ;;
        t) OPEN_TERMINAL=true ;;
        h) showHelp; exit 0 ;;
        n) MUTE_NOTIFY=true ;;
        v) MUTE_ECHO=true ;;
        \?) echo "Invalid option. Use -h for help."; exit 1 ;;
    esac
done

if [ "$OPEN_TERMINAL" = true ]; then
    openTerminal
    exit 0
fi

displayMenu
