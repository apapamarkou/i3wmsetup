# FZF Font Size Selector for YOUNIX desktop environment

choice=$(echo -e "  Small Font\n  Medium Font\n  Large Font" | fzf --layout=reverse --prompt="  Select Size: ")
if [ -n "$choice" ]; then
    case "$choice" in
        *Small*) theme-config font small ;;
        *Medium*) theme-config font medium ;;
        *Large*) theme-config font large ;;
    esac
fi